<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header.ejs') %>


    <body>
        <div class="container">
            <h2>Thêm sản phẩm</h2>
            <form action="/product/add" method="POST">
                <label for="name">Tên sản phẩm:</label>
                <input type="text" id="name" name="name" class="form-control" required> <br><br>

                <label for="quantity">Số lượng:</label>
                <input type="number" id="quantity" name="quantity" class="form-control" required> <br><br>

                <label for="price">Giá:</label>
                <input type="number" id="price" name="price" step="0.01" class="form-control" required> <br><br>

                <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
                <a href="/home" class="btn btn-secondary ml-2">Quay lại</a>
            </form>

            <div>
            </div>
        </div>
    </body>

    <%- include('./partials/footer.ejs') %>


</html>